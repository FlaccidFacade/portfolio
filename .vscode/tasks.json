{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Jest Tests",
      "type": "shell",
      "command": "npm run test:watch",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/app"
      }
    },
    {
      "label": "Install Dependencies in App",
      "type": "shell",
      "command": "npm install",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}