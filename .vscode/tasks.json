{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Jest Tests",
      "type": "shell",
      "command": "npm run test:watch",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$jest",
      "options": {
        "cwd": "${workspaceFolder}/app"
      }
    }
  ]
}